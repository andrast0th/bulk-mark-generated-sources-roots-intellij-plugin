<idea-plugin>
    <id>ro.nexttech.intelli.bulkmark</id>
    <name>Bulk Mark Content Roots</name>
    <description>Bulk Mark Content Roots, for when you have a custom build plugin generating stuff in god knows what folder.</description>
    <vendor>Toth Andras</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="ro.nexttech.intellij.bulkmark.toolWindow.MyToolWindowFactory"
                    anchor="left"
                    secondary="true"
                    icon="AllIcons.Modules.GeneratedSourceRoot"
                    id="Bulk Mark Content Roots"/>
    </extensions>
</idea-plugin>
